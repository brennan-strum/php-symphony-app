{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex w-full">
        <div class="form-wrapper">
        <form class="form" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="mb-3 font-weight-normal text-2xl">Please sign in</h1>
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control w-full input input-bordered form-input" autocomplete="email" required autofocus>
            <label for="password">Password</label>
            <input type="password" name="_password" id="password" class="form-control w-full input input-bordered form-input" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <div class="flex justify-end w-full">
                <button class="btn btn-primary" type="submit">
                    Log in
                </button>
            </div>

            <div class="mt-10 text-center">
                Don't have a user you can <a class="link" href="/register">Register</a> here.
            </div>
        </form>
    </div>
{% endblock %}
